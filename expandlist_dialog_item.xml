<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/px130"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_workIcon"
        android:layout_gravity="center_vertical"
        android:src="@drawable/tree_expand"
        android:layout_width="@dimen/px32"
        android:layout_height="@dimen/px32"/>
    <TextView
        android:id="@+id/tv_workName"
        android:background="@drawable/text_bg_selector"
        android:text="考勤打卡"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/px20"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
